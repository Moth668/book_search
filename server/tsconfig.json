{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", // Source files
    "outDir": "dist", // Compiled files
    "noEmitOnError": true // Prevent emitting files on TypeScript errors
  },
  "include": ["src/**/*.ts"], // Include only TypeScript files in src
  "exclude": ["dist", "node_modules"] // Explicitly exclude dist and node_modules
}
